{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"],
      "@repositories/*": ["repositories/*"],
      "@routers/*": ["routers/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
