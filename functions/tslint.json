{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "rules": {
    "variable-name": [true, "allow-leading-underscore"],
    "no-console": false,
    "no-submodule-imports": [
      true,
      "source-map-support",
      "module-alias",
      "@constants",
      "@interfaces",
      "@middlewares",
      "@modules",
      "@repositories",
      "@routers",
      "@utils"
    ],
    "no-implicit-dependencies": [
      true,
      "dev",
      [
        "@constants",
        "@interfaces",
        "@middlewares",
        "@modules",
        "@repositories",
        "@routers",
        "@utils"
      ]
    ],
    "no-boolean-literal-compare": false
  }
}
